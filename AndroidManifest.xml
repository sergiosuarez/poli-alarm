<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mario.polialarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mario.polialarm.MainActivity"
            android:label="Registro Alarmas" >
        </activity>
        <activity
            android:name="com.mario.polialarm.Tonos"
            android:label="Elegir Tono" >
        </activity>
         <activity
            android:name="com.mario.polialarm.Mostrar_calendario"
            android:label="Calendario Alarmas" >
        </activity>
        <activity
            android:name="com.mario.polialarm.DemoActivity"
            android:label="@string/title_activity_demo"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="com.mario.polialarm.demoactivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mario.polialarm.Menu"
            android:label="@string/app_name" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>